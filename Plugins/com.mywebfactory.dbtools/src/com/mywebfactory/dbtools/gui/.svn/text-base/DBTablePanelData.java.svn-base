    public DBTablePanelData(final String tableName, final connectionObj conObj, DBVisualizerPanel dbMainPanel) {
        initComponents();
        this.tableName = tableName;
        this.conObj = conObj;
        this.dbMainPanel = dbMainPanel;
        
        rSyntaxTextArea1.setSyntaxEditingStyle(SyntaxConstants.SYNTAX_STYLE_SQL);
        rSyntaxTextArea1.setCodeFoldingEnabled(true);
        rSyntaxTextArea1.setAntiAliasingEnabled(true);

    }

    public void showData() {
        java.awt.EventQueue.invokeLater(new Runnable() {

            @Override
            public void run() {
                dbMainPanel.setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
                switch (conObj.getDbType().toUpperCase()) {
                    case "ORACLE": {
                        ResultSet rs = OracleQueries.getTableData(tableName, conObj);
                        jTableDBTableData.setModel(new ResultSetTableModel(rs));
                        ResultSet rsa = OracleQueries.getTableColumns(tableName, conObj);
                        jTableDBTableColumns.setModel(new ResultSetTableModel(rsa));
                        rSyntaxTextArea1.setText(OracleQueries.getTableScript(tableName, conObj));
                        rSyntaxTextArea1.setCaretPosition(0);
                        dbMainPanel.setCursor(Cursor.getPredefinedCursor(Cursor.DEFAULT_CURSOR));
                        break;
                    }
                    case "MYSQL": {
                        ResultSet rs = MysqlQueries.getTableData(tableName, conObj);
                        jTableDBTableData.setModel(new ResultSetTableModel(rs));
                        ResultSet rsa = MysqlQueries.getTableColumns(tableName, conObj);
                        jTableDBTableColumns.setModel(new ResultSetTableModel(rsa));
                        rSyntaxTextArea1.setText(MysqlQueries.getTableScript(tableName, conObj));
                        rSyntaxTextArea1.setCaretPosition(0);
                        dbMainPanel.setCursor(Cursor.getPredefinedCursor(Cursor.DEFAULT_CURSOR));
                        break;
                    }
                }
            }
        });
    }

